# Frontend Configuration - Production
FRONTEND_API_URL=https://mapmyjourney-backend.onrender.com/api

# Backend Configuration - Production
BACKEND_PORT=10000
BACKEND_CONTEXT_PATH=/api
SPRING_PROFILES_ACTIVE=prod

# Database Configuration - Production (H2 with persistent storage)
SPRING_DATASOURCE_URL=jdbc:h2:file:/data/mapmyjourney;MODE=MySQL;AUTO_SERVER=TRUE
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.h2.Driver
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.H2Dialect
SPRING_H2_CONSOLE_ENABLED=false

# CORS Configuration
SPRING_WEB_CORS_ALLOWED_ORIGINS=https://mapmyjourney.onrender.com
SPRING_WEB_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
SPRING_WEB_CORS_ALLOWED_HEADERS=*
SPRING_WEB_CORS_ALLOW_CREDENTIALS=true
